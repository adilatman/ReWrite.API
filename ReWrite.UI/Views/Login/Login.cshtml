@model LoginDTO

<div class="container">
    <h2 class="text-center">LOG IN</h2>
    <br />
    <div>
        <form asp-action="Login" asp-controller="Login" method="post">
            <div class="col-md-6 offset-md-3">
                <div class="form-group">
                    <label class="h6">Username</label>
                    <input asp-for="Username" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="h6">Password</label>
                    <input type="password" asp-for="Password" class="form-control" />
                </div>
                <span class="alert-danger">@TempData["registerMessage"]</span><br />
                <button type="submit" class="mt-3 text-center btn btn-success">Log In</button><br />
                <br />
                <button asp-action="Register" class="btn btn-dark">Log On</button>
            </div>

        </form>

    </div>
</div>
